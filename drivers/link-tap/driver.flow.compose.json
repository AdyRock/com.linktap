                        "nl": "Irrigratie modus"
                    },
                    "values": [
                        {
                            "id": "I",
                            "label": {
                                "en": "Interval",
                                "de": "Intervall-Modus",
                                "nl": "Interval"
                            }
                        },
                        {
                            "id": "O",
                            "label": {
                                "en": "Odd and Even",
                                "de": "Ungerade- und Gerade-Modus",
                                "nl": "Oneven en even"
                            }
                        },
                        {
                            "id": "T",
                            "label": {
                                "en": "Seven day",
                                "de": "Sieben-Tage-Modus",
                                "nl": "Zeven dagen"
                            }
                        },
                        {
                            "id": "Y",
                            "label": {
